<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body ng-app="theShop" ng-controller="MainCtrl">
    <div id="header">
        <div>
            <div class="row">
                <div class="col"></div>
                <div class="col"><h1>SHOP</h1></div>
                <div class="col"><h3>
                    <a ui-sref="home"><span class="glyphicon glyphicon-home"/></a>
                    <a ui-sref="cart"><span class="glyphicon glyphicon-shopping-cart"/></a>
                    <button ng-click="addProduct()"><span class="glyphicon glyphicon-plus"/></button>
                    <span><h5>{{ cost | currency }}</h5></span>
                </h3></div>
            </div>
        </div>
    </div>

    <div id="nav" ng-controller="NavCtrl">
        <input placeholder="Search..." ng-model="query">
        <p ng-repeat="product in products.products | filter:{name:query}"> {{product.name}} </p>
    </div>

    <ui-view></ui-view>

    <script type="text/ng-template" id="/home.html">
        <div class="section">
            <h1>Details</h1>
        </div>
    </script>

    <script type="text/ng-template" id="/cart.html">
        <div class="section">
            <h1>CART</h1>
            <h3>Total cost: {{ cost | currency }}</h3>
        </div>
    </script>

</body>

</html>